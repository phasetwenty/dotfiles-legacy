[user]
	name = Christopher Haverman
	email = chaverman@trulia.com
[alias]
	alias = !git config --get-regexp 'alias.*'
    cdup = !cd $(git rev-parse --show-cdup)
	co = checkout
	diffhead = diff HEAD^ HEAD
	ft = !git fetch && git status
	lg = log
	st = status
	upstream = branch --set-upstream-to
[mergetool]
	keepBackup = true
[color]
	ui = true
[core]
	excludesfile = /home/chaverman/.gitrc/gitignore_global
	pager = less
; May be necessary?
;[diff]
;    external = git-diff
[pull]
    rebase = true
[merge]
	conflictstyle = diff3
