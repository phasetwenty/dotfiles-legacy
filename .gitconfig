[user]
	name = Christopher Haverman
	email = chaverman@trulia.com
[alias]
	alias = !git config --get-regexp 'alias.*'
    cdup = !cd $(git rev-parse --show-cdup)
	co = checkout
	ft = !git fetch && git status
	lg = log
	st = status
[mergetool]
	keepBackup = true
[color]
	ui = true
[core]
	excludesfile = /Users/chaverman/.gitrc/gitignore_global
	pager = less
; May be necessary?
;[diff]
;    external = git-diff
[pull]
    rebase = true
[merge]
	conflictstyle = diff3
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
